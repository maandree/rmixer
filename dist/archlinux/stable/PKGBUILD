pkgname=rmixer
pkgver=1.1
pkgrel=1
pkgdesc="Simple remote interface for the ALSA mixer"
arch=('any')
url="https://github.com/maandree/rmixer"
license=('WTFPL')
depends=('java-runtime>=7' 'alsa-utils')
makedepends=('java-environment>=7')
provides=('rmixer')
conflicts=('rmixer')
source=(https://github.com/maandree/rmixer/tarball/v$pkgver)
md5sums=(0bc89f574bb0319045c2639967105f4e)

build() {
  cd maandree-rmixer-*
  make -B
}

package() {
  cd maandree-rmixer-*
  make DESTDIR="$pkgdir/" install
}
