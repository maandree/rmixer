pkgname=rmixer
pkgver=1.0
pkgrel=1
pkgdesc="Simple remote interface for the ALSA mixer"
arch=('any')
url="https://github.com/maandree/rmixer"
license=('Public Domain')
depends=('java-runtime>=7' 'alsa-util')
makedepends=('java-environment>=7')
provides=('rmixer')
conflicts=('rmixer')
source=(src.tar.xz)
md5sums=(0373e42b94b3b3fca029f1b608c4fe66)

build() {
  cd "$srcdir"
  make -B
}

package() {
  cd "$srcdir"
  make DESTDIR="$pkgdir/" install
}
